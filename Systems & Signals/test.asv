%Bandwidth is 1% of peak value.
%Peak value at t = 0 == 0.5
Ts = 1/64; %Rounded 
T0 = 4;
N0 = T0/Ts;

t=0:Ts:Ts*(N0-1);
t = t;
g = exp(-2*t);
g(1)= Ts*0.5;
G = fft(g);

[Gp, Gm] = cart2pol(real(G), imag(G));
k=0:N0-1;
k=k;
w=2*pi*k/T0;
subplot(211), stem(w(1:32), Gm(1:32));
subplot(212), stem(w(1:32), Gp(1:32));